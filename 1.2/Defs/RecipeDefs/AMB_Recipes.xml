<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Big Mate -->

	<RecipeDef>
		<defName>AM_MakeTerere</defName>
		<label>make tereré</label>
		<description>Make a sweet, refreshing drink similar to Mater. Replace the hot water with lemonade in order to make this delicious and rich drink.</description>
		<jobString>Making tereré</jobString>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>500</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		
		<recipeUsers>
			<li>Campfire</li>
			<li>ElectricStove</li>
			<li>FueledStove</li>			
		</recipeUsers>

		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>AM_RawYerba</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>AMB_RawLemon</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>VCE_RawSugar</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			
			

		</ingredients>
		<fixedIngredientFilter>			
			<thingDefs>
				<li>AM_RawYerba</li>
				<li>AMB_RawLemon</li>
				<li>VCE_RawSugar</li>
				
			</thingDefs>
			<categories>
				
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>			
			<thingDefs>
				<li>AM_RawYerba</li>
				<li>AMB_RawLemon</li>
				<li>VCE_RawSugar</li>
				
			</thingDefs>
			<categories>
				
			</categories>
		</defaultIngredientFilter>
		
		<products>
			<AMB_Terere>5</AMB_Terere>
		</products>
		<researchPrerequisite>AM_MateMixing</researchPrerequisite>
		
	</RecipeDef>
	
