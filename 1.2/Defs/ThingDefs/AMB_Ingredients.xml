<Defs>

<!-- Orange Peel -->

<ThingDef ParentName="RoughPlantBase">
		<defName>AMB_OrangePeel</defName>
		<label>orange peel</label>
		<description>Dryed orange peel, used to flavour mate.</description>
		<graphicData>
			<texPath>Things/Items/Raw/OrangePeel</texPath>
		</graphicData>
		<statBases>
			<MarketValue>0.5</MarketValue>
			<Nutrition>0.01</Nutrition>
			<Flammability>1.5</Flammability>
		</statBases>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>215</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<thingCategories>
			<li>AMB_MateIngredients</li>
		</thingCategories>
		<ingestible>
			<preferability>DesperateOnly</preferability>
		</ingestible>
	</ThingDef>
	
