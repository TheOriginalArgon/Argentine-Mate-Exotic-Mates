<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="TreeBase">
		<defName>AMB_DeathBerry_Bush</defName>
		<label>deathberry bush</label>
		<description>An uncommon, very rare bush, it grows randomly and quite hard to predicts, this bush is the source of death berries, one of the most dangerous types of berries, not because they're poisonous or osmething, they're just too delicious.</description>
		<graphicData>
			<texPath>Things/Plants/AMB_DeathBerry_Bush</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<selectable>true</selectable>

		<statBases>
			<Beauty>0</Beauty>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<ingestible />
		<plant>
			<dieIfLeafless>false</dieIfLeafless>
			<growDays>55</growDays>
			<visualSizeRange>0.8~1.5</visualSizeRange>
			<sowMinSkill>6</sowMinSkill>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<sowResearchPrerequisites>
				<li>AMB_DeathberriesSowing</li>
			</sowResearchPrerequisites>
			<fertilityMin>0.7</fertilityMin>
			<topWindExposure>0.05</topWindExposure>
			<mustBeWildToSow>true</mustBeWildToSow>
			<immatureGraphicPath>Things/Plants/AMB_DeathBerry_Bush_Immature</immatureGraphicPath>
			<leaflessGraphicPath>Things/Plants/AMB_DeathBerry_Bush_Leafless</leaflessGraphicPath>
			<harvestWork>900</harvestWork>
			<harvestTag>Standard</harvestTag>
			<harvestYield>7</harvestYield>
			<harvestedThingDef>AMB_DeathBerries</harvestedThingDef>
			<harvestFailable>false</harvestFailable>
			<harvestAfterGrowth>0.20</harvestAfterGrowth>
		</plant>
	</ThingDef>
	
	<ThingDef ParentName="TreeBase">
		<defName>AMB_LemonTree</defName>
