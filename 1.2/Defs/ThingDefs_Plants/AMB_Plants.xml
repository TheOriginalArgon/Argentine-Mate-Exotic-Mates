	<!-- Mint Plant -->
	
	<ThingDef ParentName="PlantBase">
		<defName>AMB_MintPlant</defName>
		<label>mint plant</label>
		<description>Mentha Spicata, the most popular type of mint. Mint has an invasive taste, added in small quantities it can give a magic taste to Mate.</description>
		<statBases>
			<MaxHitPoints>45</MaxHitPoints>
			<Nutrition>0.03</Nutrition>
			<Beauty>5</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/MintPlant</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<selectable>true</selectable>
		<pathCost>3</pathCost>
		<ingestible />
		<plant>
			<sowResearchPrerequisites>
				<li>AM_MateMixing</li>
			</sowResearchPrerequisites>
			<fertilityMin>1</fertilityMin>
			<fertilitySensitivity>1</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<maxMeshCount>1</maxMeshCount>
			<harvestedThingDef>AMB_MintLeaves</harvestedThingDef>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestYield>2</harvestYield>
			<harvestWork>50</harvestWork>
			<sowTags>
				<li>Decorative</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
			<growDays>4.2</growDays>			
			<visualSizeRange>0.9~1.2</visualSizeRange>
			<immatureGraphicPath>Things/Plants/MintPlant</immatureGraphicPath>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>
	
